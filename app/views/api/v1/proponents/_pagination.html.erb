<div>
  <% if  pagination.previous_page? %>
    <%= link_to 'First', api_v1_proponents_path(page: 1) %>
    <%= link_to '< Previous', api_v1_proponents_path(page: pagination.previous_page) %>
  <% else %>
    <p>First</p>
  <% end %>
  <p><%= "Page #{pagination.page} of #{pagination.total_pages}" %></p>
  <% if pagination.next_page? %>
    <%= link_to 'Next >', api_v1_proponents_path(page: pagination.next_page) %>
    <%= link_to 'Last', api_v1_proponents_path(page: pagination.total_pages) %>
  <% else %>
    <p>Last </p>
  <% end %>
</div>